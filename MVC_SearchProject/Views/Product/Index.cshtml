@model MVC_SearchProject.Models.SearchString;
@{
    ViewData["Title"] = "Index";
    var productList =new List<SearchSpace.Product>();
    productList = (List<SearchSpace.Product>)ViewBag.Product;
}

<h1>Search</h1>

<form method="post" asp-controller="Product" asp-action="ShowProcuduct">
    <span class="align-content-lg-center">Search :  </span><input type="text" placeholder="Search Product.." name="str" />
    <input type="submit" value="Search" />
    <br />
    <br />
</form>


@if(productList.Count()!=0){
    <h4>Results for search :@ViewBag.Search</h4>
    <table class="table table-striped table-bordered">
        <thead class="thead-danger">
            <tr>
                <th>
                    ProductName
                </th>
                <th>
                    Manufacture
                </th>
                <th>
                    Price
                </th>
                <th>
                    Seller
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in productList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model=>item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.Seller)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.Description)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
else{
    <h5 text-danger>No Result Found for search @ViewBag.Search</h5>
}